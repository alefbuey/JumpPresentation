<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center">

    <TextView
        android:id="@+id/centerV"
        android:layout_width="1dp"
        android:layout_height="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/center_center_v"
        android:layout_width="1dp"
        android:layout_height="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/centerV"/>

    <TextView
        android:id="@+id/center_center2_v"
        android:layout_width="1dp"
        android:layout_height="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/center_center_v"/>

    <TextView
        android:id="@+id/center_centeru_v"
        android:layout_width="1dp"
        android:layout_height="1dp"
        app:layout_constraintBottom_toBottomOf="@id/centerV"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/centerH"
        android:layout_width="1dp"
        android:layout_height="1dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/center_centerR_H"
        android:layout_width="1dp"
        android:layout_height="1dp"
        app:layout_constraintLeft_toLeftOf="@id/centerH"
        app:layout_constraintRight_toRightOf="parent"/>


    <ImageView
        android:id="@+id/iv_login"
        android:layout_width="110dp"
        android:layout_height="45dp"
        android:paddingLeft="10dp"
        android:src="@drawable/ic_man"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/center_centeru_v"/>

onstraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/center_center_h"
        android:layout_width="1dp"
        android:layout_height="1dp"
        app:layout_constraintLeft_toLeftOf="@id/centerH"
        app:layout_constraintRight_toRightOf="parent"
        />


    <TextView
        android:id="@+id/tv_gender"
        android:layout_width="215dp"
        android:layout_height="30dp"
        android:layout_marginEnd="84dp"
        android:background="@drawable/ic_deadline"
        android:paddingLeft="10dp"
        android:text="What is yout gender?"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@id/centerV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_login"
        app:layout_constraintVertical_bias="0.484" />



    <TextView
        android:id="@+id/tv_female"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:background="@drawable/ic_deadline"
        android:text="Female"
        android:paddingLeft="10dp"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="@id/tv_gender"
        app:layout_constraintTop_toBottomOf="@id/tv_gender"
        app:layout_constraintBottom_toTopOf="@id/centerV"/>

    <CheckBox
        android:id="@+id/cbFemale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:onClick="onCheckboxClicked"
        app:layout_constraintBottom_toTopOf="@+id/cbMale"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintLeft_toRightOf="@id/tv_female"
        app:layout_constraintRight_toRightOf="@id/center_center_h"
        app:layout_constraintTop_toTopOf="@id/tv_female"
        app:layout_constraintVertical_bias="0.0" />


    <TextView
        android:id="@+id/tv_male"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/ic_deadline"
        android:paddingLeft="10dp"
        android:text="Male"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="@id/tv_gender"
        app:layout_constraintTop_toBottomOf="@id/tv_female" />

    <CheckBox
        android:id="@+id/cbMale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="20dp"
        android:onClick="onCheckboxClicked"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintLeft_toRightOf="@id/tv_male"
        app:layout_constraintRight_toRightOf="@id/center_center_h"
        app:layout_constraintTop_toTopOf="@id/tv_male"
        app:layout_constraintVertical_bias="0.0" />


</android.support.constraint.ConstraintLayout>